# https://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{c,cpp,h}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{py,conf}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
